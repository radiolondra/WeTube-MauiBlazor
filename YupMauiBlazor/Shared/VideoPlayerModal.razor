<Row>
   <Column  Class="mx-auto" ColumnSize="ColumnSize.IsFull">
        <ModalHeader>
            <ModalTitle Style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width:100%" >        
                @VideoTitle
            </ModalTitle>
            <CloseButton/>
        </ModalHeader>

        <ModalBody>
            
            <Video Class="d-flex mx-auto"
                   AutomaticallyHideControls="true"
                   ResetOnEnd="true"           
                   Poster="@ImageJpgDataUrl"
                   Source="@(@EphemeralVideoUrl)"> 
            </Video>
            
        </ModalBody>

    </Column>
</Row>
   

@code {
    [Inject] public IModalService ModalService { get; set; }
    [Parameter] public string VideoTitle { get; set; }
    [Parameter] public string ImageJpgDataUrl { get; set; }
    [Parameter] public string EphemeralVideoUrl { get; set; }
    

